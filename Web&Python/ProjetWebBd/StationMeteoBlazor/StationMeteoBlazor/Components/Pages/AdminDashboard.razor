@page "/admin-dashboard"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@using StationMeteoBlazor.Data
@using StationMeteoBlazor.Models
@using Microsoft.AspNetCore.Components.Authorization
@inject SupportService Service
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Dashboard Admin</PageTitle>

@if (isLoading)
{
    <div class="container py-5">
        <div class="row g-4">
            @for (int i = 0; i < 4; i++)
            {
                <div class="col-md-3">
                    <div class="skeleton-card"></div>
                </div>
            }
        </div>
        <div class="skeleton-table mt-4"></div>
    </div>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger container mt-4">@errorMessage</div>
}
else
{
    <div class="container py-4 admin-wrapper">

        <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-3 mb-4">
            <h2 class="fw-bold mb-0 d-flex align-items-center gap-2">
                <span class="dash-icon"><i class="bi bi-speedometer2"></i></span>
                Tableau de bord — Administration
            </h2>
            <div class="d-flex flex-wrap gap-2">
                <div class="stat-chip gradient-primary">
                    <div class="stat-label">Total</div>
                    <div class="stat-value">@GetStat("total")</div>
                </div>
                <div class="stat-chip gradient-success">
                    <div class="stat-label">Résolus</div>
                    <div class="stat-value">@GetStat("resolus")</div>
                </div>
                <div class="stat-chip gradient-warning">
                    <div class="stat-label">Non résolus</div>
                    <div class="stat-value">@GetStat("nonResolus")</div>
                </div>
                <div class="stat-chip gradient-info">
                    <div class="stat-label">Aujourd'hui</div>
                    <div class="stat-value">@GetStat("aujourdHui")</div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-0 mb-4 quick-stats">
            <div class="card-body d-flex flex-wrap gap-4">
                <div class="mini-stat">
                    <span class="mini-label">Taux de résolution</span>
                    <div class="progress mt-2" style="height:10px;">
                        @{
                            var total = GetStat("total");
                            var resolus = GetStat("resolus");
                            var pct = total == 0 ? 0 : (int)(resolus * 100.0 / total);
                        }
                        <div class="progress-bar bg-success" role="progressbar" style="width:@pct%"></div>
                    </div>
                    <div class="mini-value text-success">@pct%</div>
                </div>

                <div class="mini-stat">
                    <span class="mini-label">Créations aujourd'hui</span>
                    <div class="mini-value">@GetStat("aujourdHui")</div>
                </div>

                <div class="mini-stat">
                    <span class="mini-label">Tickets en attente</span>
                    <div class="mini-value text-warning">@GetStat("nonResolus")</div>
                </div>

                <div class="mini-stat">
                    <span class="mini-label">Résolus (global)</span>
                    <div class="mini-value text-success">@GetStat("resolus")</div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-transparent border-0 pb-0">
                <div class="d-flex flex-column flex-xl-row gap-3 justify-content-between align-items-xl-center">
                    <h5 class="fw-bold mb-0 d-flex align-items-center gap-2">
                        <i class="bi bi-list-check text-primary"></i> Derniers tickets
                    </h5>
                    <div class="d-flex flex-wrap gap-2">
                        <div class="input-group search-box">
                            <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                            <input class="form-control" placeholder="Recherche..." @bind="searchTerm" @bind:after="FiltrerTickets" />
                        </div>
                        <select class="form-select status-filter" @bind="statusFilter" @bind:after="FiltrerTickets">
                            <option value="all">Tous</option>
                            <option value="open">En attente</option>
                            <option value="resolved">Résolus</option>
                        </select>
                        <button class="btn btn-outline-secondary" @onclick="Rafraichir">
                            <i class="bi bi-arrow-clockwise"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="card-body pt-2">
                @if (!filtered.Any())
                {
                    <div class="empty-state text-center py-5">
                        <div class="empty-icon mb-3"><i class="bi bi-chat-left-dots"></i></div>
                        <h6 class="fw-bold mb-1">Aucun ticket</h6>
                        <p class="text-muted small mb-0">Ajustez le filtre ou rechargez.</p>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table align-middle ticket-table mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Utilisateur</th>
                                    <th>Problème</th>
                                    <th>État</th>
                                    <th>Date</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var t in filtered.Take(12))
                                {
                                    <tr>
                                        <td class="text-muted">@t.IdTicket</td>
                                        <td>@t.Nom @t.Prenom</td>
                                        <td class="problem-cell">@t.Probleme</td>
                                        <td>
                                            @if (t.Resolue)
                                            {
                                                <span class="status-badge resolved"><i class="bi bi-check2-circle me-1"></i>Résolu</span>
                                            }
                                            else
                                            {
                                                <span class="status-badge pending"><i class="bi bi-hourglass-split me-1"></i>En attente</span>
                                            }
                                        </td>
                                        <td><span class="date-chip">@t.DateCreation.ToString("dd/MM/yy")</span></td>
                                        <td class="text-end">
                                            <button class="btn btn-sm btn-outline-primary rounded-pill" @onclick="() => VoirTicket(t.IdTicket)">
                                                <i class="bi bi-eye"></i> Ouvrir
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
            <div class="card-footer bg-transparent border-0 small text-muted d-flex justify-content-between">
                <span>Affichage: @filtered.Count / @tickets?.Count</span>
                <span>Dernier rafraîchissement: @lastRefresh.ToString("HH:mm:ss")</span>
            </div>
        </div>

        <div class="text-end">
            <button class="btn btn-primary shadow-sm" @onclick="GotoAdmin">
                Gestion complète des tickets →
            </button>
        </div>
    </div>
}

@code {
    Dictionary<string, int>? stats;
    List<VTicketsAvecUser>? tickets;
    List<VTicketsAvecUser> filtered = new();
    private bool isLoading = true;
    private string? errorMessage;
    private string searchTerm = "";
    private string statusFilter = "all";
    private DateTime lastRefresh = DateTime.Now;

    protected override async Task OnInitializedAsync()
    {
        isLoading = true;
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState?.User;
            if (user == null || !(user.Identity?.IsAuthenticated ?? false))
            {
                Navigation.NavigateTo("/login", true);
                return;
            }
            stats = await Service.GetStats();
            tickets = await Service.GetAllTickets();
            FiltrerTickets();
        }
        catch (Exception ex)
        {
            errorMessage = "Impossible de charger le tableau de bord.";
            Console.Error.WriteLine(ex);
        }
        finally
        {
            isLoading = false;
        }
    }

    private int GetStat(string key) => (stats != null && stats.TryGetValue(key, out var v)) ? v : 0;

    private void FiltrerTickets()
    {
        if (tickets == null)
        {
            filtered = new();
            return;
        }
        IEnumerable<VTicketsAvecUser> q = tickets;
        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            var s = searchTerm.Trim().ToLowerInvariant();
            q = q.Where(t => t.Probleme?.ToLowerInvariant().Contains(s) == true || $"{t.Nom} {t.Prenom}".ToLowerInvariant().Contains(s));
        }
        q = statusFilter switch
        {
            "open" => q.Where(t => !t.Resolue),
            "resolved" => q.Where(t => t.Resolue),
            _ => q
        };
        filtered = q
            .OrderByDescending(t => t.DateCreation)
            .ThenBy(t => t.Resolue)
            .ToList();
        StateHasChanged();
    }

    private void VoirTicket(int id) => Navigation.NavigateTo($"/ticket/{id}?from=admin-dashboard");
    private void GotoAdmin() => Navigation.NavigateTo("/support-admin");
    private async Task Rafraichir()
    {
        if (tickets != null)
        {
            tickets = await Service.GetAllTickets();
            lastRefresh = DateTime.Now;
            FiltrerTickets();
        }
    }
}

