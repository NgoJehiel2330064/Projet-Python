@using Microsoft.AspNetCore.Components.Authorization
@using StationMeteoBlazor.Authentification
@using StationMeteoBlazor.Components.Shared
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject IJSRuntime JS
@implements IDisposable

<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold text-primary" href="/">
            <i class="bi bi-cloud-sun"></i> Station Météo
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarContent">
            <AuthorizeView>
                <Authorized Context="auth">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <AuthorizeView Roles="User">
                            <Authorized>
                                <li class="nav-item">
                                    <a class="nav-link" href="/capteurs"><i class="bi bi-speedometer2"></i> Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/support"><i class="bi bi-headset"></i> Support</a>
                                </li>
                            </Authorized>
                        </AuthorizeView>

                        <AuthorizeView Roles="Admin">
                            <Authorized>
                                <li class="nav-item">
                                    <a class="nav-link" href="/admin-dashboard"><i class="bi bi-kanban"></i> Admin</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/support-admin"><i class="bi bi-ticket-detailed"></i> Tickets</a>
                                </li>
                            </Authorized>
                        </AuthorizeView>
                    </ul>

                    <div class="d-flex align-items-center gap-2">
                        <button class="btn btn-sm btn-outline-secondary" @onclick="ToggleDarkMode" title="Mode sombre">
                            <i class="bi dark-mode-icon @(isDark ? "bi-sun-fill" : "bi-moon-stars")"></i>
                        </button>

                        <LogoutButton CssClass="btn btn-sm btn-outline-danger align-items-center gap-1" RedirectUrl="/login" Confirm="true" />

                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-primary dropdown-toggle d-flex align-items-center gap-2"
                                    type="button" id="userDropdown" data-bs-toggle="dropdown">
                                <img src="https://ui-avatars.com/api/?name=@(auth.User.Identity?.Name ?? "U")&background=1b6ec2&color=fff"
                                     class="rounded-circle" height="28" alt="Avatar" />
                                <span class="d-none d-md-inline">@auth.User.Identity?.Name</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end shadow">
                                <li class="dropdown-item-text">
                                    <small class="text-muted">Connecté</small><br />
                                    <strong>@auth.User.Identity?.Name</strong>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-person-circle"></i> Profil</a></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-gear"></i> Paramètres</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <LogoutButton CssClass="dropdown-item text-danger" RedirectUrl="/login" Confirm="true" />
                                </li>
                            </ul>
                        </div>
                    </div>
                </Authorized>

                <NotAuthorized>
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="/login"><i class="bi bi-box-arrow-in-right"></i> Connexion</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary btn-sm ms-2" href="/register">
                                <i class="bi bi-person-plus"></i> Inscription
                            </a>
                        </li>
                    </ul>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</nav>

@code {
    private bool isDark;

    protected override Task OnInitializedAsync()
    {
        AuthStateProvider.AuthenticationStateChanged += OnAuthenticationStateChanged;
        return Task.CompletedTask;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var saved = await JS.InvokeAsync<string>("localStorage.getItem", "theme");
            if (saved == "dark")
            {
                isDark = true;
                StateHasChanged();
            }
        }
    }

    private async Task ToggleDarkMode()
    {
        await JS.InvokeVoidAsync("toggleDarkMode");
        isDark = !isDark;
    }

    private void OnAuthenticationStateChanged(Task<AuthenticationState> task) =>
        InvokeAsync(StateHasChanged);

    public void Dispose() =>
        AuthStateProvider.AuthenticationStateChanged -= OnAuthenticationStateChanged;
}

